<resources>
    <!-- Base application theme. -->
    <style name="Theme.Up" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_accent1_500</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent2_500</item>
        <item name="colorSecondaryVariant">@android:color/system_accent2_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
