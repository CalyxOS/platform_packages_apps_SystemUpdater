<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/update_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_update" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/uptodate"
            android:textColor="?android:textColorPrimary"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/update_calyx_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:paddingBottom="3dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            tools:text="Calyx version: 4.4.1-UNOFFICIAL" />

        <TextView
            android:id="@+id/update_android_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingBottom="3dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            tools:text="Android version: 13" />

        <TextView
            android:id="@+id/update_security_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            tools:text="Android security update: 2022-12-05" />

        <TextView
            android:id="@+id/last_update_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="start"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            tools:text="Last successful check for update:\nJanuary 11, 2023 15:29" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:min="0"
            android:visibility="gone"
            app:indicatorColor="?android:colorAccent"
            app:trackCornerRadius="10dp"
            app:trackThickness="5dp" />
    </LinearLayout>

    <Button
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:text="@string/settings"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/multi_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:textAllCaps="false"
        tools:text="@string/check_update" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
